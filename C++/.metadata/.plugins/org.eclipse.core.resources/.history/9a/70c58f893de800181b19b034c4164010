#include <iostream>
using namespace std;

int main() {
	int a, b, c;
	float d;
	cout << "0 - Exit"<<"\n";
	cout << "1 - Addition"<<"\n";
	cout << "2 - Subtraction"<<"\n";
	cout << "3 - Multiplication"<<"\n";
	cout << "4 - Division"<<"\n";
	cin >> c;
	switch(c);
	case 0 : return 0;
	case 1 : {
		cout << "Enter numbers: "<<"\n";
		cin>>a,b;
		d = a + b;
		cout << d;

	}
	case 2 : {
		cout << "Enter numbers: "<<"\n";
		cin>>a,b;
		d = a - b;
		cout << d;
	}
	case 3 : {
		cout << "Enter numbers: "<<"\n";
		d = a * b;
		cout << d;

	}
	case 4 : {
		cout << "Enter numbers: "<<"\n";
		if(a==0)
			cout << "Wrong";
		else if(b==0)
			cout << "Wrong";
		else{
			d = a / b;
		}
		cout << d;
	}
	default : cout << "Wrong";
	return 0;
